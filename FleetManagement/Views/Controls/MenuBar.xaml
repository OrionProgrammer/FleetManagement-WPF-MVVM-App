<UserControl x:Class="FleetManagement.Views.Controls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FleetManagement.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Menu Margin="0, 0, 0, 10" BorderThickness="2">
            <MenuItem Header="_File" FontSize="12">
                <MenuItem Header="_Exit" Click="Exit" />
            </MenuItem>
            <MenuItem Header="_Vehicles" FontSize="12">
                <MenuItem Header="_New Vehicle" Click="NewVehicle" />
                <MenuItem Header="Show _All Vehicles" Click="VehilceList" />
            </MenuItem>
            <MenuItem Header="_Reports" FontSize="12">
                <MenuItem Header="Vehicles on _Road" />
                <MenuItem Header="Vehicles in _Service" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
